{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ING Bank Design Tokens - Components",
  "description": "Tokeny dla komponent√≥w UI w stylu ING Bank",
  "components": {
    "button": {
      "primary": {
        "background": {
          "default": "#FF6200",
          "hover": "#CC4E00",
          "active": "#993A00",
          "disabled": "#FFD4B3"
        },
        "text": {
          "default": "#FFFFFF",
          "disabled": "#FFFFFF"
        },
        "border": {
          "default": "transparent",
          "hover": "transparent",
          "active": "transparent",
          "disabled": "transparent"
        },
        "shadow": {
          "default": "0 4px 14px 0 rgba(255, 98, 0, 0.39)",
          "hover": "0 6px 20px 0 rgba(255, 98, 0, 0.50)",
          "active": "0 2px 8px 0 rgba(255, 98, 0, 0.30)"
        },
        "padding": {
          "small": "0.5rem 1rem",
          "medium": "0.75rem 1.5rem",
          "large": "1rem 2rem"
        },
        "borderRadius": "0.25rem",
        "fontWeight": "600",
        "transition": "all 0.2s ease-in-out"
      },
      "secondary": {
        "background": {
          "default": "#FFFFFF",
          "hover": "#F5F5F5",
          "active": "#E8E8E8",
          "disabled": "#F5F5F5"
        },
        "text": {
          "default": "#FF6200",
          "hover": "#CC4E00",
          "active": "#993A00",
          "disabled": "#B3B3B3"
        },
        "border": {
          "default": "#FF6200",
          "hover": "#CC4E00",
          "active": "#993A00",
          "disabled": "#D1D1D1"
        },
        "shadow": {
          "default": "none",
          "hover": "0 2px 8px 0 rgba(255, 98, 0, 0.15)"
        },
        "padding": {
          "small": "0.5rem 1rem",
          "medium": "0.75rem 1.5rem",
          "large": "1rem 2rem"
        },
        "borderRadius": "0.25rem",
        "borderWidth": "2px",
        "fontWeight": "600",
        "transition": "all 0.2s ease-in-out"
      },
      "tertiary": {
        "background": {
          "default": "transparent",
          "hover": "rgba(255, 98, 0, 0.1)",
          "active": "rgba(255, 98, 0, 0.2)",
          "disabled": "transparent"
        },
        "text": {
          "default": "#FF6200",
          "hover": "#CC4E00",
          "active": "#993A00",
          "disabled": "#B3B3B3"
        },
        "border": {
          "default": "transparent",
          "hover": "transparent",
          "active": "transparent",
          "disabled": "transparent"
        },
        "padding": {
          "small": "0.5rem 1rem",
          "medium": "0.75rem 1.5rem",
          "large": "1rem 2rem"
        },
        "borderRadius": "0.25rem",
        "fontWeight": "600",
        "transition": "all 0.2s ease-in-out"
      },
      "danger": {
        "background": {
          "default": "#D0021B",
          "hover": "#A50116",
          "active": "#7A0110",
          "disabled": "#F7B3BC"
        },
        "text": {
          "default": "#FFFFFF",
          "disabled": "#FFFFFF"
        },
        "border": {
          "default": "transparent"
        },
        "shadow": {
          "default": "0 4px 14px 0 rgba(208, 2, 27, 0.39)"
        },
        "padding": {
          "small": "0.5rem 1rem",
          "medium": "0.75rem 1.5rem",
          "large": "1rem 2rem"
        },
        "borderRadius": "0.25rem",
        "fontWeight": "600",
        "transition": "all 0.2s ease-in-out"
      }
    },
    "input": {
      "default": {
        "background": {
          "default": "#FFFFFF",
          "hover": "#FFFFFF",
          "focus": "#FFFFFF",
          "disabled": "#F5F5F5",
          "error": "#FDEAED"
        },
        "text": {
          "default": "#1A1A1A",
          "placeholder": "#767676",
          "disabled": "#B3B3B3"
        },
        "border": {
          "default": "#D1D1D1",
          "hover": "#B3B3B3",
          "focus": "#FF6200",
          "disabled": "#E8E8E8",
          "error": "#D0021B"
        },
        "borderWidth": {
          "default": "1px",
          "focus": "2px",
          "error": "2px"
        },
        "borderRadius": "0.25rem",
        "padding": {
          "small": "0.5rem 0.75rem",
          "medium": "0.75rem 1rem",
          "large": "1rem 1.25rem"
        },
        "fontSize": {
          "small": "0.875rem",
          "medium": "1rem",
          "large": "1.125rem"
        },
        "height": {
          "small": "2rem",
          "medium": "2.5rem",
          "large": "3rem"
        },
        "shadow": {
          "focus": "0 0 0 3px rgba(255, 98, 0, 0.1)"
        },
        "transition": "all 0.2s ease-in-out"
      },
      "label": {
        "fontSize": "0.875rem",
        "fontWeight": "500",
        "color": "#1A1A1A",
        "marginBottom": "0.5rem"
      },
      "helper": {
        "fontSize": "0.75rem",
        "color": {
          "default": "#4D4D4D",
          "error": "#D0021B",
          "success": "#00A03E"
        },
        "marginTop": "0.25rem"
      }
    },
    "select": {
      "background": {
        "default": "#FFFFFF",
        "hover": "#FFFFFF",
        "focus": "#FFFFFF",
        "disabled": "#F5F5F5"
      },
      "border": {
        "default": "#D1D1D1",
        "hover": "#B3B3B3",
        "focus": "#FF6200",
        "disabled": "#E8E8E8"
      },
      "borderWidth": {
        "default": "1px",
        "focus": "2px"
      },
      "borderRadius": "0.25rem",
      "padding": "0.75rem 2.5rem 0.75rem 1rem",
      "height": "2.5rem",
      "fontSize": "1rem",
      "iconColor": "#4D4D4D",
      "shadow": {
        "focus": "0 0 0 3px rgba(255, 98, 0, 0.1)"
      }
    },
    "checkbox": {
      "size": {
        "small": "1rem",
        "medium": "1.25rem",
        "large": "1.5rem"
      },
      "background": {
        "default": "#FFFFFF",
        "checked": "#FF6200",
        "disabled": "#F5F5F5",
        "disabledChecked": "#FFD4B3"
      },
      "border": {
        "default": "#D1D1D1",
        "hover": "#B3B3B3",
        "focus": "#FF6200",
        "checked": "#FF6200",
        "disabled": "#E8E8E8"
      },
      "borderWidth": "2px",
      "borderRadius": "0.125rem",
      "checkColor": "#FFFFFF",
      "shadow": {
        "focus": "0 0 0 3px rgba(255, 98, 0, 0.1)"
      }
    },
    "radio": {
      "size": {
        "small": "1rem",
        "medium": "1.25rem",
        "large": "1.5rem"
      },
      "background": {
        "default": "#FFFFFF",
        "checked": "#FFFFFF",
        "disabled": "#F5F5F5"
      },
      "border": {
        "default": "#D1D1D1",
        "hover": "#B3B3B3",
        "focus": "#FF6200",
        "checked": "#FF6200",
        "disabled": "#E8E8E8"
      },
      "borderWidth": "2px",
      "dotColor": "#FF6200",
      "shadow": {
        "focus": "0 0 0 3px rgba(255, 98, 0, 0.1)"
      }
    },
    "card": {
      "default": {
        "background": "#FFFFFF",
        "border": "#E8E8E8",
        "borderWidth": "1px",
        "borderRadius": "0.5rem",
        "padding": {
          "small": "1rem",
          "medium": "1.5rem",
          "large": "2rem"
        },
        "shadow": {
          "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
          "hover": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"
        },
        "transition": "all 0.2s ease-in-out"
      },
      "elevated": {
        "background": "#FFFFFF",
        "border": "transparent",
        "borderWidth": "0",
        "borderRadius": "0.5rem",
        "padding": {
          "small": "1rem",
          "medium": "1.5rem",
          "large": "2rem"
        },
        "shadow": {
          "default": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
          "hover": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
        },
        "transition": "all 0.2s ease-in-out"
      },
      "interactive": {
        "background": {
          "default": "#FFFFFF",
          "hover": "#FAFAFA"
        },
        "border": {
          "default": "#E8E8E8",
          "hover": "#FF6200"
        },
        "borderWidth": "2px",
        "borderRadius": "0.5rem",
        "padding": {
          "small": "1rem",
          "medium": "1.5rem",
          "large": "2rem"
        },
        "shadow": {
          "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
          "hover": "0 10px 15px -3px rgba(255, 98, 0, 0.2)"
        },
        "transition": "all 0.2s ease-in-out",
        "cursor": "pointer"
      }
    },
    "modal": {
      "backdrop": {
        "background": "rgba(0, 0, 0, 0.5)",
        "backdropFilter": "blur(4px)"
      },
      "content": {
        "background": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": {
          "small": "1.5rem",
          "medium": "2rem",
          "large": "2.5rem"
        },
        "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
        "maxWidth": {
          "small": "28rem",
          "medium": "32rem",
          "large": "42rem",
          "xlarge": "56rem"
        }
      },
      "header": {
        "borderBottom": "1px solid #E8E8E8",
        "paddingBottom": "1rem",
        "marginBottom": "1rem"
      },
      "footer": {
        "borderTop": "1px solid #E8E8E8",
        "paddingTop": "1rem",
        "marginTop": "1rem"
      }
    },
    "alert": {
      "success": {
        "background": "#E6F7ED",
        "text": "#00582A",
        "border": "#00A03E",
        "iconColor": "#00A03E"
      },
      "warning": {
        "background": "#FFF4E6",
        "text": "#7A4F00",
        "border": "#F59E00",
        "iconColor": "#F59E00"
      },
      "error": {
        "background": "#FDEAED",
        "text": "#68010E",
        "border": "#D0021B",
        "iconColor": "#D0021B"
      },
      "info": {
        "background": "#E6F2FF",
        "text": "#003366",
        "border": "#0066CC",
        "iconColor": "#0066CC"
      },
      "borderWidth": "1px",
      "borderRadius": "0.25rem",
      "padding": "1rem",
      "fontSize": "0.875rem",
      "iconSize": "1.25rem"
    },
    "badge": {
      "default": {
        "background": "#F5F5F5",
        "text": "#4D4D4D",
        "border": "transparent"
      },
      "primary": {
        "background": "#FF6200",
        "text": "#FFFFFF",
        "border": "transparent"
      },
      "success": {
        "background": "#00A03E",
        "text": "#FFFFFF",
        "border": "transparent"
      },
      "warning": {
        "background": "#F59E00",
        "text": "#FFFFFF",
        "border": "transparent"
      },
      "error": {
        "background": "#D0021B",
        "text": "#FFFFFF",
        "border": "transparent"
      },
      "info": {
        "background": "#0066CC",
        "text": "#FFFFFF",
        "border": "transparent"
      },
      "borderRadius": "9999px",
      "padding": {
        "small": "0.125rem 0.5rem",
        "medium": "0.25rem 0.75rem",
        "large": "0.375rem 1rem"
      },
      "fontSize": {
        "small": "0.75rem",
        "medium": "0.875rem",
        "large": "1rem"
      },
      "fontWeight": "600"
    },
    "tooltip": {
      "background": "#1A1A1A",
      "text": "#FFFFFF",
      "fontSize": "0.875rem",
      "padding": "0.5rem 0.75rem",
      "borderRadius": "0.25rem",
      "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "maxWidth": "20rem",
      "arrowSize": "0.5rem"
    },
    "link": {
      "color": {
        "default": "#FF6200",
        "hover": "#CC4E00",
        "active": "#993A00",
        "visited": "#993A00"
      },
      "textDecoration": {
        "default": "underline",
        "hover": "underline"
      },
      "fontWeight": "400",
      "transition": "color 0.2s ease-in-out"
    },
    "divider": {
      "horizontal": {
        "borderTop": "1px solid #E8E8E8",
        "margin": "1.5rem 0"
      },
      "vertical": {
        "borderLeft": "1px solid #E8E8E8",
        "margin": "0 1.5rem"
      }
    },
    "avatar": {
      "size": {
        "xs": "1.5rem",
        "sm": "2rem",
        "md": "2.5rem",
        "lg": "3rem",
        "xl": "4rem"
      },
      "borderRadius": "9999px",
      "border": "2px solid #FFFFFF",
      "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)"
    },
    "spinner": {
      "color": {
        "primary": "#FF6200",
        "secondary": "#000066",
        "white": "#FFFFFF"
      },
      "size": {
        "small": "1rem",
        "medium": "1.5rem",
        "large": "2rem",
        "xlarge": "3rem"
      },
      "borderWidth": {
        "small": "2px",
        "medium": "3px",
        "large": "4px"
      }
    },
    "progressBar": {
      "background": "#E8E8E8",
      "fill": "#FF6200",
      "height": {
        "small": "0.25rem",
        "medium": "0.5rem",
        "large": "1rem"
      },
      "borderRadius": "9999px"
    },
    "tabs": {
      "borderBottom": "2px solid #E8E8E8",
      "tab": {
        "color": {
          "default": "#4D4D4D",
          "hover": "#1A1A1A",
          "active": "#FF6200"
        },
        "borderBottom": {
          "default": "2px solid transparent",
          "active": "2px solid #FF6200"
        },
        "padding": "1rem 1.5rem",
        "fontSize": "1rem",
        "fontWeight": {
          "default": "500",
          "active": "600"
        },
        "transition": "all 0.2s ease-in-out"
      }
    },
    "breadcrumb": {
      "color": {
        "default": "#4D4D4D",
        "hover": "#FF6200",
        "active": "#1A1A1A"
      },
      "separator": {
        "color": "#B3B3B3",
        "content": "/"
      },
      "fontSize": "0.875rem",
      "gap": "0.5rem"
    },
    "pagination": {
      "item": {
        "background": {
          "default": "#FFFFFF",
          "hover": "#F5F5F5",
          "active": "#FF6200",
          "disabled": "#F5F5F5"
        },
        "text": {
          "default": "#1A1A1A",
          "active": "#FFFFFF",
          "disabled": "#B3B3B3"
        },
        "border": {
          "default": "#D1D1D1",
          "active": "#FF6200"
        },
        "borderRadius": "0.25rem",
        "padding": "0.5rem 0.75rem",
        "fontSize": "0.875rem",
        "fontWeight": "500"
      },
      "gap": "0.25rem"
    }
  }
}
